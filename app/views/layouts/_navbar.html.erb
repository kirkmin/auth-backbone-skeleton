<nav class="navbar navbar-default" role="navigation">
	<div class="container container-fluid">
		<ul class="nav navbar-nav navbar-left">
			<% if signed_in? %>
				<li><%= button_to "Sign out", session_url, method: :delete, class: "btn btn-success navbar-btn" %></li>
			<% else %>
				<li><%= link_to "Log in", new_session_url, method: :get %></li>
				<li><%= link_to "Sign up", new_user_url, method: :get %></li>
			<% end %>
		</ul>
	</div>
</nav>
<% if flash[:errors] %>
	<div class="alert alert-warning alert-dismissible" role="alert">
	   <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
	<%= flash[:errors].join("<br>").html_safe %>
	</div>
<% end %>